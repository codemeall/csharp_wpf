<UserControl x:Class="FusilWPFApplication.FirstScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cf="clr-namespace:FusilControlLib;assembly=FusilControlLib"
             mc:Ignorable="d" 
             >
    
    <cf:CustomGrid x:Name="gdFirstScr"  >
        <cf:CustomButtons x:Name="btnLogout" Width="80" Height="25" Content="Log Out" Margin="0,10,100,0" VerticalAlignment="Top" HorizontalAlignment="Right" Click="btnLogout_Click" />
        <cf:CustomWrapPanel x:Name="wpFirstScreen" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">            
            <cf:CustomButtons x:Name="btnTransactions" Width="100" Height="60" Content="Transactions" Click="btnLogin_Click"/>
            <cf:CustomButtons x:Name="btnReport" Width="100" Height="60" Content="Reports" Margin="0,20,0,0" Click="btnReport_Click"/>
        </cf:CustomWrapPanel>
    </cf:CustomGrid>
</UserControl>
